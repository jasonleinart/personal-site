---
/**
 * BaseLayout
 * 
 * Foundation layout component that provides the core HTML structure,
 * navigation, footer, and global styles for all pages. All other layouts extend
 * this base layout to ensure consistent site-wide structure.
 * 
 * Features:
 * - HTML document structure
 * - Favicon and manifest configuration
 * - Theme system with dark/light mode support
 * - Prevents flash of wrong theme on page load
 * - Astro View Transitions support with theme persistence
 * - Sticky navigation header
 * - Global CSS imports (global, typography, utilities)
 * - Responsive layout structure
 * 
 * Note: SEO meta tags (title, description, OG, Twitter) should be handled
 * by the SEO component in each page, not in this layout.
 * 
 * @component
 * 
 * @example
 * ```astro
 * ---
 * import BaseLayout from '../layouts/BaseLayout.astro';
 * import SEO from '../components/SEO.astro';
 * ---
 * 
 * <BaseLayout>
 *   <SEO 
 *     slot="head"
 *     title="About Me" 
 *     description="Learn more about my background"
 *   />
 *   <div>Page content goes here</div>
 * </BaseLayout>
 * ```
 */

import { ClientRouter } from 'astro:transitions';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../config';

// Self-hosted fonts (eliminates render-blocking Google Fonts request)
import '@fontsource/dm-sans/400.css';
import '@fontsource/dm-sans/400-italic.css';
import '@fontsource/dm-sans/500.css';
import '@fontsource/dm-sans/600.css';
import '@fontsource/dm-sans/700.css';
import '@fontsource/instrument-serif/400.css';
import '@fontsource/instrument-serif/400-italic.css';

import '../styles/global.css';
import '../styles/typography.css';
import '../styles/utilities.css';
---

<!DOCTYPE html>
<html lang={siteConfig.language} data-theme="dark">
  <head>
    <!-- Google Tag Manager (delayed for performance) -->
    <script is:inline>
    (function(){
      var loaded = false;
      function loadGTM() {
        if (loaded) return;
        loaded = true;
        (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
        j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
        'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
        })(window,document,'script','dataLayer','GTM-M2S5CZLJ');
      }
      // Load on interaction or after 3s
      ['scroll','click','mousemove','keydown','touchstart'].forEach(function(e){
        window.addEventListener(e, loadGTM, {once:true,passive:true});
      });
      setTimeout(loadGTM, 3000);
    })();
    </script>
    <!-- End Google Tag Manager -->

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO tags injected via slot -->
    <slot name="head" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#0a0a0a" />
    
    <ClientRouter />
    
    <!-- Prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        const theme = stored || (window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
    
    <!-- Preserve theme during View Transitions -->
    <script is:inline>
      document.addEventListener('astro:before-swap', (e) => {
        const theme = document.documentElement.getAttribute('data-theme');
        e.newDocument.documentElement.setAttribute('data-theme', theme);
      });
    </script>
    
    <style>
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      
      main {
        flex: 1;
      }
      
      .site-header {
        position: sticky;
        top: 0;
        z-index: 100;
        background: var(--color-bg);
      }

      /* Decorative background elements - persistent to prevent flicker */
      .bg-decorations {
        position: fixed;
        inset: 0;
        pointer-events: none;
        z-index: -1;
      }

      .bg-grid {
        position: absolute;
        inset: 0;
        background-image:
          linear-gradient(rgba(196, 101, 74, 0.025) 1px, transparent 1px),
          linear-gradient(90deg, rgba(196, 101, 74, 0.025) 1px, transparent 1px);
        background-size: 60px 60px;
      }

      .bg-glow {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 500px;
        background: var(--gradient-glow);
      }

      /* Light mode adjustments */
      :global([data-theme="light"]) .bg-grid {
        background-image:
          linear-gradient(rgba(179, 85, 55, 0.015) 1px, transparent 1px),
          linear-gradient(90deg, rgba(179, 85, 55, 0.015) 1px, transparent 1px);
      }
    </style>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-M2S5CZLJ"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <!-- Persistent decorative background (prevents flicker on navigation) -->
    <div class="bg-decorations" transition:persist aria-hidden="true">
      <div class="bg-grid"></div>
      <div class="bg-glow"></div>
    </div>

    <header class="site-header" transition:persist>
      <Navigation />
    </header>
    <main transition:animate="fade">
      <slot />
    </main>
    <Footer transition:persist />
  </body>
</html>
