  }

  @media (max-width: 768px) {
    .prose h2 {
      font-size: var(--font-size-xl);
      margin-top: var(--space-2xl);
    }

    .maturity-table {
      font-size: 0.875rem;
    }

    .maturity-table th,
    .maturity-table td {
      padding: var(--space-sm);
    }

    .phase {
      gap: var(--space-md);
    }

    .phase-number {
      width: 32px;
      height: 32px;
      font-size: 0.875rem;
    }
