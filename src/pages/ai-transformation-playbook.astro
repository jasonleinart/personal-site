    border-radius: 0 4px 4px 0;
    font-size: 0.9375rem;
  }

  /* Phase List */
  .phase-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    margin: var(--space-xl) 0;
  }

  .phase {
    display: flex;
    gap: var(--space-lg);
    align-items: flex-start;
  }

  .phase-number {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
