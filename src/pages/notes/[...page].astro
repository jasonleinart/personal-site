---
/**
 * Notes Index Page with Pagination
 *
 * Lists all published notes (excluding drafts) with pagination support.
 * Notes are shorter-form content that highlight specific insights from analysis articles.
 *
 * Routes:
 * - /notes (page 1)
 * - /notes/2 (page 2)
 * - etc.
 *
 * @page
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import SEO from '../../components/SEO.astro';
import Pagination from '../../components/Pagination.astro';
import PageStats from '../../components/PageStats.astro';
import { getCollection, getEntry } from 'astro:content';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths: GetStaticPaths = async () => {
  const postsPerPage = 10;

  const allNotes = await getCollection('notes', ({ data }) => {
    return data.draft === false;
  });

  const sortedNotes = allNotes.sort((a, b) => {
    return b.data.date.getTime() - a.data.date.getTime();
  });

  const totalPages = Math.ceil(sortedNotes.length / postsPerPage);

  return Array.from({ length: totalPages || 1 }, (_, i) => {
    const page = i + 1;
    const start = i * postsPerPage;
    const end = start + postsPerPage;

    return {
      params: { page: page === 1 ? undefined : String(page) },
      props: {
        notes: sortedNotes.slice(start, end),
        currentPage: page,
        totalPages: totalPages || 1,
        totalNotes: sortedNotes.length,
      },
    };
  });
};

interface Props {
  notes: Awaited<ReturnType<typeof getCollection<'notes'>>>;
  currentPage: number;
  totalPages: number;
  totalNotes: number;
}

const { notes, currentPage, totalPages, totalNotes } = Astro.props;

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  }).format(date);
}

// Get related analysis titles for display
const notesWithAnalysis = await Promise.all(
  notes.map(async (note) => {
    let relatedTitle = null;
    if (note.data.relatedAnalysis) {
      const analysis = await getEntry('analysis', note.data.relatedAnalysis);
      relatedTitle = analysis?.data.title;
    }
    return { ...note, relatedTitle };
  })
);
---

<BaseLayout>
  <SEO
    slot="head"
    title="Notes"
    description="Short-form insights and takeaways from strategic analysis. Quick reads that highlight key concepts."
    type="website"
  />

  <main class="page-container">
    <header class="page-header">
      <h1 class="page-title">Notes</h1>
      <p class="page-intro">
        Short-form insights that highlight specific aspects of my analysis. Quick reads, focused takeaways.
      </p>
      <PageStats text={totalNotes === 1 ? '1 note' : `${totalNotes} notes`} />
    </header>

    {notesWithAnalysis.length > 0 ? (
      <div class="notes-list">
        {notesWithAnalysis.map((note) => (
          <a href={`/notes/${note.id}`} class="note-item">
            <div class="note-meta">
              <time datetime={note.data.date.toISOString()}>
                {formatDate(note.data.date)}
              </time>
              {note.relatedTitle && (
                <>
                  <span class="meta-separator">Â·</span>
                  <span class="related-analysis">Related: {note.relatedTitle}</span>
                </>
              )}
            </div>
            <h2 class="note-title">{note.data.title}</h2>
          </a>
        ))}
      </div>
    ) : (
      <p class="empty-state">No notes published yet.</p>
    )}

    <Pagination
      currentPage={currentPage}
      totalPages={totalPages}
      baseUrl="/notes"
    />
  </main>
</BaseLayout>

<style>
  .page-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 400;
    margin-bottom: 0.75rem;
    letter-spacing: -0.02em;
  }

  .page-intro {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
    max-width: 600px;
  }

  .notes-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .note-item {
    display: block;
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--color-border);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .note-item:first-child {
    border-top: 1px solid var(--color-border);
  }

  .note-item:hover {
    background: var(--gradient-card);
    margin-left: -1rem;
    margin-right: -1rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .note-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .meta-separator {
    opacity: 0.5;
  }

  .related-analysis {
    color: var(--color-accent);
  }

  .note-title {
    font-size: 1.375rem;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.35;
    margin: 0;
  }

  .note-item:hover .note-title {
    color: var(--color-accent);
  }

  .empty-state {
    color: var(--color-text-muted);
    font-style: italic;
    padding: 2rem 0;
  }

  @media (max-width: 768px) {
    .page-container {
      padding: 1.5rem 1rem 3rem;
    }

    .page-title {
      font-size: 2rem;
    }

    .note-item:hover {
      margin-left: -0.5rem;
      margin-right: -0.5rem;
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }
  }
</style>
